{
  "manifest_version": 2,
  "name": "Minimize Chrome to tray",
  "version": "1.4.1.72",
  "description": "Extension to minimize Chrome window to the system tray.",

  "icons": { "16": "icons/16.png",
             "48": "icons/48.png",
	     "128": "icons/128.png" },

  "background": {
    "page": "background.html"
  },

  "plugins": [{"path": "chromeTray.dll"}],

  "permissions": ["tabs"],
  "options_page": "options.html"
}